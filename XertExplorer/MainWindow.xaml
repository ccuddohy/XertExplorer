<Window x:Class="XertExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XertExplorer"
        mc:Ignorable="d"
        Title="XertExplorer" Height="700" Width="1200">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="40"/>
			<RowDefinition Height="50"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="150"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<ScrollViewer Grid.Column="1" Grid.Row="2" Background="#FFF1F1F1">
			<StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10 0">
				<ItemsControl x:Name="ListViewWorkouts" ItemsSource="{Binding XertWorkout}">
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<Border Margin="10" Width="980"  Height="25S0" Background="LightSteelBlue">
								<StackPanel Orientation="Horizontal">
									<Border Width="350" Height="200" CornerRadius="5" Margin="10">
										<Border.Effect>
											<DropShadowEffect ShadowDepth="1"/>
										</Border.Effect>
										<Border.Background>
											<ImageBrush ImageSource="{Binding thumb}"/>
										</Border.Background>
									</Border>
									
									<StackPanel Orientation="Vertical">
										<StackPanel>
											<TextBlock Padding="40,20,0,10"  Text="{Binding name, StringFormat={}{0}}" FontSize="18" FontFamily="Franklin Gothic Medium"/>
										</StackPanel>
										<StackPanel>
											<TextBlock Padding="0,0,0,3" Text="{Binding focus, StringFormat='- Focus: {0}'}" FontSize="14" FontFamily="Arial"/>
											<TextBlock Padding="0,0,0,3" Text="{Binding difficulty, StringFormat='- Difficulty: {0:#,#}'}" FontSize="14" FontFamily="Arial"/>
											<TextBlock Padding="0,0,0,10" Text="{Binding duration, StringFormat='- Duration: {0}'}" FontSize="14" FontFamily="Arial"/>
											<TextBlock Padding="0,0,0,0" MaxWidth="580" TextWrapping="Wrap" Text="{Binding description, StringFormat='- Description:{0}'}" FontSize="14" FontFamily="Arial"/>
										</StackPanel>
									</StackPanel>
								</StackPanel>

							</Border>
						</DataTemplate>



					</ItemsControl.ItemTemplate>
				</ItemsControl>
			</StackPanel>
		</ScrollViewer>
	</Grid>
</Window>
